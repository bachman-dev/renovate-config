{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Renovate config that should be used for any JS/TS libraries",
  "extends": ["config:best-practices", ":pinOnlyDevDependencies", ":gitSignOff"],
  "dependencyDashboardHeader": "# Dependency Dashboard \n\n **Renovate Config**: [bachman-dev/renovate-config:jslib](https://github.com/bachman-dev/renovate-config/blob/main/jslib.json)",
  "configMigration": true,
  "schedule": ["* * 1-7 * */7"],
  "timezone": "America/New_York",
  "prHourlyLimit": 0,
  "labels": ["dependencies"],
  "assignees": ["bachmacintosh"],
  "rebaseWhen": "behind-base-branch",
  "platformCommit": "enabled",
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "platformAutomerge": true,
    "schedule": ["* 0-3 * * 0"]
  },
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest", "pinDigest"],
      "automerge": true,
      "platformAutomerge": true
    },
    {
      "matchUpdateTypes": ["pin", "pinDigest"],
      "schedule": ["at any time"]
    },
    {
      "matchDepTypes": ["devDependencies"],
      "commitMessageTopic": "devDependency {{depName}}"
    },
    {
      "matchDepTypes": ["peerDependencies"],
      "commitMessageTopic": "peerDependency {{depName}}"
    },
    {
      "matchPackageNames": [
        "/^@bachmacintosh/",
        "/^@bachman-dev/",
        "@cloudflare/workers-types",
        "@octokit/types",
        "@octokit/webhooks-types",
        "discord-api-types"
      ],
      "schedule": ["at any time"],
      "minimumReleaseAge": "3 days"
    },
    {
      "matchPackageNames": ["typescript"],
      "matchUpdateTypes": ["patch"],
      "labels": ["typescript"],
      "commitMessageTopic": "TypeScript development version",
      "automerge": true,
      "platformAutomerge": true
    },
    {
      "matchPackageNames": ["typescript"],
      "matchUpdateTypes": ["major", "minor"],
      "labels": ["typescript"],
      "commitMessageTopic": "TypeScript development version",
      "dependencyDashboardApproval": true,
      "automerge": false,
      "platformAutomerge": false
    },
    {
      "matchPackageNames": ["typescript"],
      "matchDepTypes": ["peerDependencies"],
      "labels": ["typescript"],
      "commitMessageTopic": "supported TypeScript versions",
      "dependencyDashboardApproval": true,
      "automerge": false,
      "platformAutomerge": false
    }
  ]
}
